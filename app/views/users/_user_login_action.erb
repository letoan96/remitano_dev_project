<%= form_with(url: credentials_path, method: :post, class: 'form-inline mt-2 mt-md-0') do |form|  %>
  <%= form.text_field :email, placeholder: 'Email', class: 'form-control mr-sm-2' %>
  <%= form.password_field :password, placeholder: 'Password', class: 'form-control mr-sm-2' %>
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Login/Register</button>
<% end %>
