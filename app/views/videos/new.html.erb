<div class="container" style="margin-top: 70px;">
  <div class='row justify-content-center'>
    <div class="col-lg-8">
      <fieldset class="border" >
        <legend>Share a Youtube movie</legend>
          <div class='row justify-content-center'>
            <div class="col-lg-8">
              <%= form_for @video do |form| %>
                <div class="form-group">
                  <label for="youtube_url" class="nobr mr-2 col-form-label-sm" >Youtube URL</label>
                  <input type="text" class="form-control" name="youtube_url" id="youtube_url" style="width: 70%" required>
                </div>
                <div class="form-group">
                  <label for="youtube_url" class="nobr mr-2 col-form-label-sm" style="visibility: hidden;">Submit butto</label>
                  <button type="submit" class="btn btn-primary text-center" style="width: 70%">Share</button>
                </div>
              <% end %>
            </div>
          </div>
      </fieldset>
    </div>
  </div>
</div>
